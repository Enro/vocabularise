#!/usr/bin/ruby

require 'fileutils'
require 'test/unit'
require 'pp'

require 'rubygems'
require 'bundler/setup'
require 'rspec'
require 'json'

require 'vocabularise/model'
require 'vocabularise/config'
require 'vocabularise/crawler'
require 'vocabularise/queue'
require 'vocabularise/request_handler'
require 'vocabularise/mendeley_handler'
require 'vocabularise/internal_handler'

require 'spec/spec_helper'

module VocabulariSe

	#
	# A class used to inject data to 
	#
	class InjectorApp
		def initialize args

			# set config
			@json = JSON.load File.open 'spec/config/vocabularise.json'
			@config = VocabulariSe::Config.new @json
			# set crawler
			@crawler = VocabulariSe::Crawler.new @config
		end

		def exec

			File.readlines( @config.dictionary ).each do |line|
				line = line.strip

				case line
				when /^\s*#/, /^\s*$/ then
					next
				else
					intag = line.downcase
					intag.gsub!(/\s+/,' ')

					begin
						@crawler.request VocabulariSe::HANDLE_INTERNAL_RELATED_TAGS,
							{ "tag" => intag },
							Queue::PRIORITY_LOW
					rescue
						# it doesn't hurt me. Never ;-)
					end
				end
			end

		end
	end
end

app = VocabulariSe::InjectorApp.new ARGV
app.exec

exit 1
